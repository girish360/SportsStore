@model SportsStore.Domain.Entities.ShippingDetails

@{
    ViewBag.Title = "Sports Store: Checkout";
}

<h2>Checkout out now</h2>
Please enter your details, and we'll ship your goods right away!
@using (Html.BeginForm("Checkout", "Cart")) {
    <h3>Ship to</h3>
    <div>Name: @Html.TextBoxFor(x => x.Name)</div>
    <h3>Address</h3>
    <div>Line 1: @Html.TextBoxFor(x => x.Line1)</div>
    <div>Line 2: @Html.TextBoxFor(x => x.Line2)</div>
    <div>Line 3: @Html.TextBoxFor(x => x.Line3)</div>
    <div>City: @Html.TextBoxFor(x => x.City)</div>
    <div>State: @Html.TextBoxFor(x => x.State)</div>
    <div>Zip: @Html.TextBoxFor(x => x.Zip)</div>
    <div>Country: @Html.TextBoxFor(x => x.Country)</div>

    <h3>Options</h3>
    <label>
        @Html.EditorFor(x => x.GiftWrap)
        Gift wrap these items
    </label>

    <p style="text-align:center">
        <input type="submit" class="actionButtons" value="Complete order" />
    </p>
}
